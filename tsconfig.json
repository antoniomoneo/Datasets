{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "scripts/dist",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "lib": ["es2020"]
  },
  "include": [
    "scripts/**/*.ts"
  ]
}

